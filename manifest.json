{
    "manifest_version": 3,
    "name": "Simple Stream Automation",
    "version": "1.0",
    "description": "Automatically skips intros, credits, and advances to the next episode for streaming services.",
    "icons": {
    },
    "permissions": [
      "storage"
    ],
    "action": {
      "default_title": "Simple Stream Automation",
      "default_popup": "options.html"
    },
    "content_scripts": [
      {
        "matches": [
          "*://static.crunchyroll.com/*"
        ],
        "js": ["scripts/crunchyroll.js"],
        "all_frames": true
      },
      {
        "matches": [
          "*://www.netflix.com/watch/*"
        ],
        "js": ["scripts/netflix.js"],
        "all_frames": false
      }
    ]
  }
